<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ED_Monitor.ViewModels"
             x:Class="ED_Monitor.Views.MaintenancePage"
             Title="MaintenancePage">
    <ContentPage.BindingContext>
    <vm:MaintenanceViewModel />
  </ContentPage.BindingContext>

  <VerticalStackLayout Padding="10" Spacing="10">
    <Button Text="Reload Tasks" Command="{Binding LoadTasksCommand}" />

   
    <CollectionView ItemsSource="{Binding Tasks}">
      <CollectionView.ItemTemplate>
        <DataTemplate>
          <Grid Padding="5">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="3*" />
              <ColumnDefinition Width="2*" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label Text="{Binding DueDate, StringFormat='{0:yyyy-MM-dd HH:mm}'}" />
            <Label Text="{Binding Technician}" Grid.Column="1" />
            <Button Text="Delete"
                    Grid.Column="2"
                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MaintenanceViewModel}}, Path=DeleteTaskCommand}"
                    CommandParameter="{Binding .}" />
          </Grid>
        </DataTemplate>
      </CollectionView.ItemTemplate>
    </CollectionView>

    <Button Text="Add New Task" Clicked="OnAddTaskClicked" />
  </VerticalStackLayout>
</ContentPage>