<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ED_Monitor.Views.SensorFirmwareUpdatePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:ED_Monitor.ViewModels"
    Title="Update Sensor Firmware">

   

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Label Text="Select Sensor" FontAttributes="Bold" />
            <Picker ItemsSource="{Binding Sensors}" 
                    ItemDisplayBinding="{Binding Name}" 
                    SelectedItem="{Binding SelectedSensor}" />

            <Button Text="Choose File" Clicked="OnPickFileClicked" />

            <Label Text="{Binding SelectedFileName}" />

            <Button Text="Upload Firmware" Command="{Binding UploadCommand}" />

            <Label Text="{Binding StatusMessage}" TextColor="Green" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
