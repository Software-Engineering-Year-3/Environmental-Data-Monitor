<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ED_Monitor.Pages.MainPage"
             Title="Environmental Monitor">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
            <Label Text="🌍 Environmental Monitor" FontSize="26" FontAttributes="Bold" HorizontalOptions="Center" />

            <Button Text="📊 Air Quality" Clicked="OnAirQualityClicked" BackgroundColor="#3399ff" TextColor="White" />
            <Button Text="💧 Water Quality" Clicked="OnWaterQualityClicked" BackgroundColor="#33cc99" TextColor="White" />
            <Button Text="⛅ Weather Conditions" Clicked="OnWeatherClicked" BackgroundColor="#ff9933" TextColor="White" />
            <Button Text="📍 View Sensors on Map" Clicked="OnMapClicked" BackgroundColor="#673AB7" TextColor="White" />
            <Button Text="🚪 Log Out" Clicked="OnLogoutClicked" BackgroundColor="DarkRed" TextColor="White" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
