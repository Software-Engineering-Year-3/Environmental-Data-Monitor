<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ED_Monitor.ViewData"
             Title="ViewData">
    <ScrollView>
        <!-- Ensure it's scrollable even if it is longer than the page and it's layed vertically-->
        <VerticalStackLayout Padding="20">
            <!--Keeping the labels style consistent-->

            <!--Air Quality section-->
            <Label Text="Air Quality Data"
                FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"/>
            <GraphicView x:Name="AirQualityView" HeightRequest="300" 
                BackgroundColor="LightGrey"/>
            
            <!--Water Quality section-->
            <Label Text="Water Quality Data"
                FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"/>
            <GraphicView x:Name="WaterQualityView" HeightRequest="300"
                BackgroundColor="LightGrey"/>
            
            <!--Weather Quality section-->
            <Label Text="Weather Quality Data"
                FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"/>
            <GraphicView x:Name="WeatherQualityView" HeightRequest="300"
                BackgroundColor="LightGrey"/>
        </VerticalStackLayout>
    </ScrollView>       
</ContentPage>