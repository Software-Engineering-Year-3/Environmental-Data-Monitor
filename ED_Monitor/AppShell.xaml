<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ED_Monitor.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ED_Monitor"
    xmlns:views="clr-namespace:ED_Monitor.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="ED_Monitor">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"
         />

    <ShellContent 
        Route="SensorDetailPage" 
        ContentTemplate="{DataTemplate views:SensorDetailPage}" />

    

    <ShellContent 
        Route="SensorFirmwareUpdatePage" 
        ContentTemplate="{DataTemplate views:SensorFirmwareUpdatePage}" />


     

</Shell>
